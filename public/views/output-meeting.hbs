<body class="inter-regular flex  flex-col bg-white">

    <div class="h-6 bg-gradient-to-r from-[#1E87FF] to-[#003282]"></div>

    <div class="inter flex h-fit w-full flex-col gap-12 bg-white p-14">
        <div class="flex gap-6">
             {{#if companyLogo}}
            <img src="{{companyLogo}}" alt="company logo"
                class="aspect-square h-32 w-32 flex-initial rounded-lg border border-neutral-300" />
                {{/if}}
            <div class="flex  flex-col items-start justify-start gap-6">
                <h1 class="poppins-semibold text-4xl">Reunión con {{companyName}}</h1>
                <h2 class="poppins-semibold rounded-lg bg-[#1E87FF] p-2 px-4 text-lg text-white">{{meetingDate}}</h2>
            </div>
        </div>

        <div class="flex w-full flex-col -mt-4">

             {{#each questions}}
            <div class="container-question py-4 w-full">
                <div class="flex w-full flex-col items-start   justify-start gap-4 rounded-lg border bg-neutral-50 p-6">
                <h3 class="poppins-semibold text-xl">{{this.title}}</h3>
                <p class="text-pretty rounded-md">{{this.body}}</p>
            </div>
            </div>
            {{/each}}

        </div>
    </div>






